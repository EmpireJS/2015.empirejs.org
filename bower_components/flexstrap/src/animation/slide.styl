@keyframes slideDown {

  from {
    transform translateY(-100%)
  }

  to {
    transform translateY(0)
  }

}

.animate-slide-down
  animation slideDown 0.25s 1 linear

@keyframes slideUp {

  from {
    transform translateY(0)
  }

  to {
    transform translateY(-100%)
  }

}

.animate-slide-up
  animation slideUp 0.25s 1 linear
